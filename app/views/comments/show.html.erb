<article class="card ms-5 me-4 my-3 p-3">
    <p><%= @comment.content %></p>
    <p><%= @comment.created_at %></p>
    <% if @comment.user_id == session[:user_id] %>
        <%= link_to "Edit", edit_gossip_comment_path(@gossip, @comment), class: "btn btn-primary w-25" %>
        <%= form_with url: gossip_comment_path(@gossip, @comment), method: :delete do |form| %>
            <div>
                <%= form.submit "Delete", class: "btn btn-danger" %>
            </div>
        <% end %>
    <% end %>
</article>
