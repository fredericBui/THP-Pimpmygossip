<%= link_to "Create a new gossip", new_gossip_path, class: "btn btn-primary text-right"%>
<section>
    <% @gossips.each do |gossip| %> 
        <article class="card mx-4 my-3 p-3"> 
            <div class="card-header">
                <a href="gossip/like/<%= gossip.id%>">
                    <i class="fa-solid fa-heart"></i>
                </a>
                <%= gossip.likes.count %>
            </div>
            <b><%= gossip.user.pseudo %></b>
            <p><%= gossip.content %></p>
            <p><%= gossip.created_at %></p>
            <%= link_to "View", gossip_path(gossip) %>
            <a href="gossip/<%= gossip.id%>/comment/new">Comment</a>
        </article>
        <% gossip.comments.each do |comment| %> 
            <article class="card ms-5 me-4 my-3 p-3">
                <div class="card-header">
                    <a href="gossip/comment/like/<%= comment.id%>">
                        <i class="fa-solid fa-heart"></i>
                    </a>
                    <%= comment.likes.count %>
                </div>
                <b><%= comment.user.pseudo %></b>
                <p><%= comment.content %></p>
                <p><%= comment.created_at %></p>
                <a href="gossip/comment/<%= comment.id%>">View</a>
            </article>
        <% end %> 
    <% end %> 
</section>