<a href=<%= :gossip_new %> class="btn btn-primary" > Create a new gossip</a>

<section>
    <% @gossips.each do |gossip| %> 
        <article class="card mx-4 my-3 p-3"> 
            <b><%= gossip.user.pseudo %></b>
            <p><%= gossip.content %></p>
            <p>Created : <%= gossip.created_at %></p>
            <a href="gossip/<%= gossip.id%>">View</a>
        </article>
        <% gossip.comments.each do |comment| %> 
            <article class="card ms-5 me-4 my-3 p-3"> <%= comment.content %></article>
        <% end %> 
    <% end %> 
</section>