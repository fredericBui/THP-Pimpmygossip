<article class="card ms-5 me-4 my-3 p-3">
    <p><%= @comment.content %></p>
    <p><%= @comment.created_at %></p>
    <% if @comment.user_id == session[:user_id] %>
        <a href="edit/<%= @comment.id%>" class= "btn btn-primary w-25">Edit</a>
        <%= form_with url: "edit/#{@comment.id}", method: :delete do |form| %>
            <div>
                <%= form.submit "Delete", class: "btn btn-danger" %>
            </div>
        <% end %>
    <% end %>
</article>
<a href="/gossips" class="btn btn-primary" >Going back to gossips</a>